<apex:page standardcontroller="Geography_Coverage__c" extensions="GeographyCoverage" tabstyle="Geography_Coverage__c" >
  <apex:form >
    <apex:pageBlock title="Geography Coverage" mode="edit" id="thePageBlock">
     <apex:pageMessages />
     <apex:pageBlockButtons >
         <apex:commandButton action="{!save}" value="Save" />
        <apex:commandButton action="{!cancel}" value="Cancel" />
     </apex:pageBlockButtons> 
     
      <apex:pageBlockSection title="Coverage Selection" columns="1">
        <apex:pageblockSectionItem >
          <apex:outputLabel value="Global:" for="category"/>
              <apex:selectList value="{!category}" size="1" id="category">
                <apex:selectOptions value="{!categories}"/>
                 <apex:actionSupport event="onchange" rerender="Categories,Areas,SubAreas, Locations, Countries "/>
              </apex:selectList>
        </apex:pageblockSectionItem>
        <apex:pageblockSectionItem >
          <apex:outputLabel value="Geo:" for="Areas"/>
             <apex:selectList value="{!Area}" size="1" id="Areas" disabled="{!ISNULL(category)}">
                <apex:selectOptions value="{!Areas}"/>
                <apex:actionSupport event="onchange" rerender="Areas,SubAreas, Locations, Countries"/>
             </apex:selectList>    
        </apex:pageblockSectionItem>
        <apex:pageblockSectionItem >
          <apex:outputLabel value="Region:" for="SubAreas"/>
             <apex:selectList value="{!SubArea}" size="1" id="SubAreas" disabled="{!ISNULL(area)}">
                <apex:selectOptions value="{!SubAreas}"/>
                <apex:actionSupport event="onchange" rerender="SubAreas, Locations, Countries"/>
             </apex:selectList>    
        </apex:pageblockSectionItem>
        <apex:pageblockSectionItem >
          <apex:outputLabel value="Region Level 1:" for="Locations"/>
             <apex:selectList value="{!Location}" size="1" id="Locations" disabled="{!ISNULL(subarea)}">
                <apex:selectOptions value="{!Locations}"/>
                <apex:actionSupport event="onchange" rerender="Locations, Countries"/>
             </apex:selectList>    
        </apex:pageblockSectionItem>
        <apex:pageblockSectionItem >
          <apex:outputLabel value="Region Level 2:" for="Countries"/>
             <apex:selectList value="{!Country}" size="1" id="Countries" disabled="{!ISNULL(location)}">
                <apex:selectOptions value="{!Countries}"/>
                <apex:actionSupport event="onchange" rerender="Countries"/>
             </apex:selectList>    
        </apex:pageblockSectionItem>

        <apex:inputField style="width:400px;" value="{!coverage.Description__c}" />
      </apex:pageBlockSection>
      <apex:pageBlockSection title="Coverage Details" columns="1">    
          <apex:inputField value="{!coverage.Sales_Organization__c}" id="SalesOrg" />
          <apex:inputField value="{!coverage.Coverage_Owner__c}" />
          <apex:inputField style="width:400px;" value="{!coverage.Notes__c}" />
      </apex:pageBlockSection>

    </apex:pageBlock>
  </apex:form>
</apex:page>