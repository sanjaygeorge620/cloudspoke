<apex:page tabStyle="training__tab" controller="TrainingDisplayController" title="Training Courses">
<html>
<body>
<apex:sectionHeader title="Perceptive Software {!ClassType} Courses"/>   
  <div style="margin:10px;">
      <!---List to Return to Featured Courses--->
       <a style="text-decoration:none;font-weight:bold;" href="{!$page.Training_Featured_Courses}">&#171; Return to Featured Courses</a> 
  </div>

  <apex:pageBlock >
      <apex:repeat value="{!ReleaseOptions}" var="pl" >
         <c:Training_Courses_by_Type CourseRelease="{!pl.value}"/>
      </apex:repeat>
      <apex:pageBlockSection title="All Courses" columns="1" >
            <apex:pageBlockTable value="{!Coursesbytype}" var="c">
                <apex:column style="width:25%;" headerValue="Course Name">
                    <apex:outputLink title="{!c.name}" value="{!$Page.Training_Course_Description}">{!c.name}
                        <apex:param name="id" value="{!c.ID}"/>
                    </apex:outputLink>
                </apex:column>
                <apex:column style="width:60%;" headerValue="Description" value="{!c.Short_Description__c}"/>
                <apex:column style="width:15%;" value="{!c.Class_Duration__c}"/>
                <!---<apex:column style="width:15%;" value="{!c.Release__c}"/>--->
            </apex:pageBlockTable>
      </apex:pageBlockSection>

  </apex:pageBlock>
</body>
</html>    
</apex:page>