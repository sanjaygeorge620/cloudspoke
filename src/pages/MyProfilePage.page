                                <apex:repeat value="{!PFlst1}" var="wrap"  rendered="{!withOutRecDisplay}" >
                                    <div class="dcBox">
                                        <apex:inputCheckbox value="{!wrap.isChecked}"  />
                                        <label>{!wrap.PfamilyName}</label> 
                                    </div>
                                </apex:repeat>
                            </div>
                             </apex:pageBlock>
                               
                                       </apex:outputPanel>
                                       
                                       
                                       <apex:outputPanel rendered="{!!isEdit}">
                                                <div class="inner-content">
                                                    <div class="left-inner-col">
                                                        <p class="item user-info-title">{!$Label.Username}: <span><apex:outputField id="detailusername" value="{!user.username}"/></span></p>
                                                        <p class="item user-info-title">{!$Label.Community_Nickname}: <span><apex:outputField id="detailcommunityNickname" value="{!user.communityNickname}"/>  </span></p>
                                                    </div>
