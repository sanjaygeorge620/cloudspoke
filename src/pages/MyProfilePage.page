                             <div class="callout-content">
                                  <apex:outputPanel layout="block" styleClass="title-buttons" id="title-buttons">
                                       <apex:commandButton rendered="{!isEdit}" styleClass="save-button" id="save" value="{!$Label.site.save}" action="{!save}" rerender="userDetail,title-buttons"/>
                                       <apex:commandButton rendered="{!isEdit}" styleClass="cancel-button" id="cancel" value="{!$Label.site.cancel}" action="{!cancel}" rerender="userDetail,title-buttons" immediate="true"/>
                        
                                       <apex:commandButton rendered="{!!isEdit}" styleClass="edit-button" id="edit" value="{!$Label.site.edit}" action="{!edit}" rerender="userDetail,title-buttons"/>
                                       <apex:commandButton rendered="{!!isEdit}" styleClass="changepassword-button" id="changePassword" value="{!$Label.site.change_password}" action="{!changePassword}"/>
                                       
                                  </apex:outputPanel>
                                  <div class="inner-content inner-content-title-bar">
                                        <span>{!$Label.site.user_information}</span>
                                  </div>
                                  <apex:outputPanel id="userDetail">
                                      <apex:outputPanel rendered="{!isEdit}">
                                                <div class="inner-content">
                                                    <div class="left-inner-col">
                                                        <p class="item user-info-title">{!$Label.Username}: <span><apex:inputField id="editusername" value="{!user.username}"/></span></p>
