<apex:page showHeader="false" Controller="SitesPartnerAccountController" standardStylesheets="false"> 
<title>{!SITE_NICKNAME} | Details</title>
    <script type="text/javascript">
        jQuery(document).ready(function() {
          jQuery('.toolbar-partner-account').addClass('active');
          jQuery('.partneraccttable').dataTable( {aaSorting: [], "bFilter": false, "bLengthChange": false, sDom: 'lfr<"dt_fixed_height"t>ip' });  
        });
    </script>
  <apex:composition template="{!SITE_TEMPLATE_PRIMARY}" >
    <apex:define name="body"> 
        <div class="cp_core">
            <div class="breadcrumb">
                <ul>
                    <li><a class="sprite_cpicons home" href="{!$Page.Partner}">Home</a><span>&#187;</span></li>
                    <li><a class="current" href="#">Partner Accounts</a></li>
                </ul>
            </div> 
            <apex:outputPanel rendered="{!!$ObjectType.account.accessible || !SITE_TAB_PARTNER_ACCOUNT}">
                  Insufficient Privileges
            </apex:outputPanel>
            <apex:outputPanel rendered="{!$ObjectType.account.accessible  && SITE_TAB_PARTNER_ACCOUNT}">
                
            <apex:pageMessages />
            
            <div class="column full-width">
                <div class="callout acct">
                    
                    
                    <!-- Pipeline -->
                    <span class="title-bar closed-won">  Accounts
                        <span class="returned-results">
                        </span>
                    </span>
                        <!-- /Title Bar -->
                    <div class="callout-content cases-content">
                        <div class="case-results">
                            <apex:outputText styleclass="no-records" rendered="{!Account.size==0}" value="No accounts to display" />
                            <apex:outputPanel rendered="{!Account.size!=0}">
                                <table cellpadding="0" cellspacing="0" border="0" class="display partneraccttable">
                                    <thead>
                                        <tr>
                                            <th>Account Name</th>                                            
                                            <th>Region</th>                                        
                                            <th>Country</th>        
                                            <th>Customer Sign Date</th>                                         
                                        </tr>
                                    </thead>
                                    <tbody>
                                         <apex:repeat value="{!Account}" var="a">
                                          <tr>  
                                               <td class="acct-id">
                                                    <apex:outputLink value="{!$page.partneracctdetails}" styleClass="results-acct-id">{!a.Name}
                                                        <apex:param name="accountId" value="{!a.id}"/>
                                                        <apex:param name="Id" value="{!a.id}"/>
                                                     </apex:outputLink>
                                                </td> 
                                                <td class="acct-region">{!a.LXK_Region__c}</td>                                            
                                                <td class="acct-country">{!a.BillingCountry}</td>    
                                                <td class="acct-country">{!a.Customer_Sign_Date__c}</td>                                              
                                          </tr>
                                         </apex:repeat>
                                    </tbody>
                              </table>
                           </apex:outputPanel>           
                        </div><!-- /Oppty Results  -->
                    </div>
                    <!-- /Pipeline -->
                    
                    
                                
                    
                    
                </div><!-- /Partner Accounts-->
            </div><!-- /Right Two-Thirds -->
            
        </apex:outputPanel><!-- /Cp Core -->
           
        </div>
    </apex:define>
  </apex:composition>  

</apex:page>