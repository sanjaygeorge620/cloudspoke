<apex:page showHeader="false" Controller="SitesOpportunityController" standardStylesheets="false"> 
<title>{!SITE_NICKNAME} | Details</title>
  <apex:composition template="{!SITE_TEMPLATE_PRIMARY}" >
    <apex:define name="body">  
        <script type="text/javascript"> 
                jQuery(document).ready(function() {
                  jQuery(".toolbar-leads").addClass("active");
                  jQuery(".accbody").hide();
                  jQuery(".accbody.step1").slideToggle("slow");
                  jQuery(".lastname").focus();
                  //disable enter
                  jQuery("#landing").keyup(function(a) {
                    if(a.keyCode == 13) {
                      return!1
                    }
                  });
                  
                });
        </script> 
        <div class="breadcrumb">
            <ul>
                <li><a class="sprite_cpicons home" href="{!$Page.Partner}">Home</a><span>&#187;</span></li>
                    <li><a href="{!$page.Opportunities}">Opportunities</a><span>&#187;</span></li>
                    <li><a class="current" href="#">Opportunity Details</a></li>
            </ul>
        </div>  
        <apex:outputPanel layout="block" rendered="{!!$ObjectType.Order__c.accessible || !SITE_TAB_OPPORTUNITIES}">
            <p>Sorry, you do not have access to this content due to insufficient privileges.</p>
        </apex:outputPanel>
        
        <apex:outputPanel layout="block" styleClass="cp_core" rendered="{!$ObjectType.Order__c.accessible && SITE_TAB_OPPORTUNITIES}">
                     
            
            <div class="column full-width">
                <apex:pageMessages id="error" />
               
                <apex:outputPanel rendered="{!!$ObjectType.Order__c.updateable}">
                    <p>Sorry, you do not have access to this content due to insufficient privileges.</p>
                </apex:outputPanel>
            </div>    
<!---Leads---->
                
            <apex:outputPanel layout="block" rendered="{!$ObjectType.Order__c.accessible}">
                <div class="column full-width"> <!----Full column-->
                    <div class="callout profile">
                        <a class="title-bar" href="#">
                            <span class="sprite_cpicons profile">&nbsp;</span>
                            {!OpportunityDetails.Opportunity_ID__c}
                        </a>
                        <div class="callout-content">

                            <div class="inner-content">
                                <apex:form >
                                    <apex:outputPanel >
                                        <div class="inner-content inner-content-title-bar">
                                            <span>Opportunity Details</span>
                                        </div>
                                        <apex:outputPanel rendered="{!$ObjectType.Order__c.updateable}">
                                            <div class="inner-content">
                                                <div class="left-inner-col">
                                                    <p class="label course-title">Opportunity Number:</p> 
                                <p ><apex:outputfield value="{!NewOpp.Opportunity_ID__c}" /></p> 
                                <p class="label course-type">Account Name</p> 
                                <p><apex:outputfield value="{!NewOpp.Opportunity_Account_Name__c }" /></p> 
                                <p class="label course-type">Stage</p> 
                                <p><apex:outputfield value="{!NewOpp.Opportunity_Stage__c }" /></p> 
                                <p class="label course-type">Sector</p>                              
                                <p><apex:outputField value="{!NewOpp.Opportunity_Sector__c}" /></p>
                                <p class="label course-type">Host Manufacturer</p>                              
                                <p><apex:outputField value="{!NewOpp.Host_manufacturer__c}" /></p>
                                <p class="label course-type">Host Application</p>                              
                                <p><apex:outputField value="{!NewOpp.Host_Application__c}" /></p>
                                <p class="label course-type">Department</p>                              
                                <p><apex:outputField value="{!NewOpp.Department__c}" /></p>
                                 </div>
                                                <div class="right-inner-col">
                                                     <p class="label course-type">Close Date</p> 
                                <p ><apex:outputfield value="{!NewOpp.Opportunity_Close_Date__c}" /></p>  
                                <p class="label course-type">Amount</p> 
                                <p ><apex:outputfield value="{!NewOpp.Opportunity_Amount__c }" /></p>  
                                <p class="label course-type">Probability (%)</p> 
                                <p><apex:outputfield value="{!NewOpp.Opportunity_Probability__c}" /></p>  
                                <p class="label course-type">Next Steps</p> 
                                <p ><apex:outputfield value="{!NewOpp.Opportunity_Next_Step__c }" /></p> 
                                <p class="item user-info-title">Partner next Steps </p>
                                <div><apex:inputField required="true" value="{!NewOpp.Partner_Next_Steps__c}"/> </div>
                             
                                                
                                                </div>
                                               <apex:commandButton styleClass="submitbutton" action="{!SubmitOpp}"/>  
                                            </div>  <!---/CONTACT DETAILS--->
                                            
                                                 
                                                  
                                            <div class="clear"/>
                                        </apex:outputPanel>
                                      
                        
                                    </apex:outputPanel>
                                  <div style="text-align:center;">
                                  
                                   
                                        </div>    
                                </apex:form>               
                            </div>
                        </div> 
                    </div>          
                </div>  
                     
            </apex:outputPanel>     
         </apex:outputPanel>
    </apex:define>
  </apex:composition>
</apex:page>