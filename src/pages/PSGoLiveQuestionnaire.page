<apex:page tabStyle="pse__Proj__c" controller="PSGoLiveQuestionnaire">
<apex:form >
	<apex:outputPanel id="mainOP">
		<div style="position:relative; overflow:auto;"> 
	    <apex:outputPanel >
	        <apex:actionStatus id="status2">
	            <apex:facet name="start">
	                <div style="width: 100%; height: 100%; background-color:#fbfbfb; opacity:0.65;" class="waitingSearchDiv" id="el_loading">
	                    <div class="waitingHolder" style="top: 45px; ">
	                        <img src="/img/loading.gif" class="waitingImage" title="Please Wait..." />
	                        <span class="waitingDescription">Loading...</span>
	                    </div>
	                </div> 
	            </apex:facet>
	        </apex:actionStatus>
    	</apex:outputPanel>
    		<apex:pageBlock title="{!$Label.Page_Title}">
    			<apex:pageBlockButtons location="bottom">
    				<apex:commandButton value="Save" action="{!performSave}" />
    			</apex:pageBlockButtons>

    			<center>
    			<div>
    			<h2 style="font-size:30px;font-family:inherit;">
    				Apex Code Coverage
    				<small style="line-height:1;color:#999999;font-family:inherit;">
    				All Classes
    				</small>
    			</h2>
    			</div>

    			</center>


    			<apex:pageMessages id="errors" />   
    				<apex:pageBlockSection columns="1">
    					<apex:pageBlockSectionItem rendered="{!!showIfNotDetails}">
							<apex:outputLabel value="{!$Label.What_value_has_solution_provided}" />
							<apex:inputTextArea value="{!goLiveQ.What_value_has_solution_provided__c}" rows="8" cols="90" />
						</apex:pageBlockSectionItem>
						<apex:pageBlockSectionItem rendered="{!!showIfNotDetails}">
							<apex:outputLabel value="{!$Label.What_were_the_project_highlights}" />
							<apex:inputTextArea value="{!goLiveQ.What_were_the_project_highlights__c}" rows="8" cols="90" />
						</apex:pageBlockSectionItem>
						<apex:pageBlockSectionItem rendered="{!!showIfNotDetails}">
							<apex:outputLabel value="{!$Label.Is_customer_potentially_referenceable}" />
							<apex:inputTextArea value="{!goLiveQ.Is_customer_potentially_referenceable__c}" rows="8" cols="90" />
						</apex:pageBlockSectionItem>
						<apex:pageBlockSectionItem rendered="{!!showIfNotDetails}">
							<apex:outputLabel value="{!$Label.If_so_which_Contacts_are_referenceable}" />
							<apex:inputTextArea value="{!goLiveQ.If_so_which_Contacts_are_referenceable__c}" rows="8" cols="90" />
						</apex:pageBlockSectionItem>
						<apex:pageBlockSectionItem >
							<apex:outputLabel value="{!$Label.Does_not_meet_criteria}" />
							<apex:inputCheckbox value="{!goLiveQ.Does_not_meet_criteria__c}">
								<apex:actionSupport event="onchange" action="{!toggleShowIfNotDetails}" status="status2" reRender="mainOP" />
							</apex:inputCheckbox>
						</apex:pageBlockSectionItem>
						<apex:pageBlockSectionItem rendered="{!showIfNotDetails}">
							<apex:outputLabel value="{!$Label.If_not_please_provide_details}" />
							<apex:inputTextArea value="{!goLiveQ.If_not_please_provide_details__c}" rows="8" cols="90" />
						</apex:pageBlockSectionItem>
    				</apex:pageBlockSection>
			</apex:pageBlock>
    	</div>

	</apex:outputPanel>
</apex:form>
</apex:page>