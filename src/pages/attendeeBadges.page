<apex:page renderAs="PDF" standardController="Training_Attendee__c" recordSetVar="Training Attendees" extensions="TrainingPDFController">              
    
    <apex:repeat value="{!attendees}" var="attendee" >        
                      
        <apex:outputPanel layout="block" style="display:{!IF((attendee.Contact__r.Name == ''), 'None', 'inline-block')};padding-top:10px; height:3.4in; width:2.3in; border-style: solid;
    border-width: 2px; margin: 3px; page-break-inside: avoid; position:relative; font-family:Helvetica, Arial, Sans-Serif">
            
            <apex:outputPanel layout="block" style="text-align:center; font-size:230%; font-weight:bold; margin-top:35%;">
              <apex:outputText style="" value="{!attendee.Contact__r.FirstName} " /> 
            </apex:outputPanel>
         
            <apex:outputPanel layout="block" style="text-align:center; font-size:145%; margin-top:15%;">
                <apex:outputText value="{!attendee.Contact__r.LastName}"/>
            </apex:outputPanel>
            
            <apex:outputPanel layout="block" style="text-align:center; font-size:50%; margin-top:16%; padding: 0px, 9px, 0px, 9px">
                <apex:outputText value="{!attendee.Course_Name__c}"/>
            </apex:outputPanel>
            
            <apex:outputPanel layout="block" style="position:absolute; bottom:0; text-align:center; padding-left:10px; margin-top:5%;">
                <apex:image url="{!$Resource.PSWTrainingBadges}" width="200px" height="72px"/>
            </apex:outputPanel>            
       </apex:outputPanel>      

    </apex:repeat>        

</apex:page>