<apex:page showHeader="false" sidebar="false" controller="LX_AcctAndContactSearch" standardStylesheets="true">
  <style>
    body{
    background: #cfeef8;
    }
</style>
<script>
function search(seltext){
    var text = document.getElementById(seltext).value;
    url= '/apex/LX_Global_Search?searchText='+encodeURIComponent(text);
    window.top.location.href = url;        
}
        
</script>
<apex:form id="form" >
    <div>
    <apex:inputText value="{!searchtext}" id="sText"  required="true"/> <br/>
    <apex:commandButton value="Search" onclick="search('{!$Component.sText}')" />    
    </div>
</apex:form>

</apex:page>