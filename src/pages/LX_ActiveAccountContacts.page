<apex:page standardController="Account" extensions="LX_Account_Extension">
 <apex:pageBlock title="Contacts" >  
<apex:pageBlockSection columns="1" >
<apex:pageBlockTable value="{!ContactList}" var="i">
 <apex:column headerValue="Contact Name">

 <apex:outputLink Target="new" value="{!URLFOR($Action.Contact.View, i.id)}">{!i.name}</apex:outputLink>
 </apex:column>
  <apex:column headerValue="Title">
<apex:outputField value="{!i.Title}"/>
 </apex:column>
   <apex:column headerValue="Job Role">
<apex:outputField value="{!i.Job_Role__c}"/>
 </apex:column>
   <apex:column headerValue="Phone">
<apex:outputField value="{!i.Phone}"/>
 </apex:column>
    <apex:column headerValue="Email">
<apex:outputField value="{!i.Email}"/>
 </apex:column>
     <apex:column headerValue="Portal User Type">
<apex:outputField value="{!i.Portal_User_Type__c}"/>
 </apex:column>
    <apex:column headerValue="Status">
<apex:outputField value="{!i.Status__c}"/>
 </apex:column>
</apex:pageBlockTable>
</apex:pageBlockSection>
</apex:pageBlock>  

</apex:page>