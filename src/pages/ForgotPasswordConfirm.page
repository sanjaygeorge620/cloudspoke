<apex:page standardStylesheets="false" showHeader="false" title="{!SITE_NICKNAME+' | '+$Label.site.forgot_password_confirmation}" controller="SitesGenericController">
  <title>{!SITE_NICKNAME+' | '+$Label.site.forgot_password_confirmation}</title>
  <apex:composition template="{!SITE_TEMPLATE_SECONDARY}">
        <apex:define name="javascript">
              //change icons
              jQuery('.sprite_cpicons.secondary').removeClass('alert');
              jQuery('.sprite_cpicons.secondary').addClass('profile');
        </apex:define>
        
        <apex:define name="breadcrumb">
             {!$Label.site.forgot_password}
        </apex:define>
        
        <apex:define name="titlebar">
             {!$Label.site.forgot_password_confirmation}
        </apex:define>
        
        <apex:define name="content">
                <p>
                 <apex:outputText styleClass="title" value="{!$Label.Site.temp_password_sent}"/>
                 <br/>
                 <br/>
                 <apex:outputLink value="{!$Site.CurrentSiteUrl}" rendered="{!$Site.LoginEnabled}">{!$Label.Site.go_to_login_page}</apex:outputLink>
                </p>
        </apex:define>
  </apex:composition>
</apex:page>